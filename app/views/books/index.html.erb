<h1 class="book-list-title">Book List</h1>

<div class="bookContainer">

<%= link_to '+ Add New', new_book_path, class: 'addBook' %>


<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Available</th>
    <th>Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= book.author %></td>
      <td><%= book.available ? 'Yes' : 'No' %></td>
      <td>
        <%= link_to edit_book_path(book), class: 'edit-link' do %>
        <i class="fa-regular fa-pen-to-square"></i>
          <% end %> |
        <%= link_to book, method: :delete, data: { confirm: 'Are you sure?' } do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
</div>
