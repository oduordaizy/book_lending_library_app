<h1>Book List</h1>

<%= link_to 'Add New Book', new_book_path, class: 'btn btn-primary' %>

<table>
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Available</th>
    <th>Actions</th>
  </tr>
  <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title, book %></td>
      <td><%= book.author %></td>
      <td><%= book.available ? 'Yes' : 'No' %></td>
      <td>
        <%= link_to 'Edit', edit_book_path(book) %> |
        <%= link_to 'Delete', book, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
